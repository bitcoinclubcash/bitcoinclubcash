CLEAN_LYOKOCOIN_TEST = test/*.gcda test/*.gcno $(GENERATED_TEST_FILES)

CLEANFILES += $(CLEAN_LYOKOCOIN_TEST)

lyokocoin_test: $(TEST_BINARY)

lyokocoin_test_check: $(TEST_BINARY) FORCE
	$(MAKE) check-TESTS TESTS=$^

lyokocoin_test_clean : FORCE
	rm -f $(CLEAN_LYOKOCOIN_TEST) $(test_test_lyokocoin_OBJECTS) $(TEST_BINARY)

check-local:
	@echo "Running test/util/lyokocoin-util-test.py..."
	$(top_builddir)/test/util/lyokocoin-util-test.py
	$(AM_V_at)$(MAKE) $(AM_MAKEFLAGS) -C secp256k1 check
if EMBEDDED_UNIVALUE
	$(AM_V_at)$(MAKE) $(AM_MAKEFLAGS) -C univalue check
endif

%.json.h: %.json
	@$(MKDIR_P) $(@D)
	@{ \
	 echo "namespace json_tests{" && \
	 echo "static unsigned const char $(*F)[] = {" && \
	 $(HEXDUMP) -v -e '8/1 "0x%02x, "' -e '"\n"' $< | $(SED) -e 's/0x  ,//g' && \
	 echo "};};"; \
	} > "$@.new" && mv -f "$@.new" "$@"
	@echo "Generated $@"
